<div>
  <%= f.label :url, '视频地址' %>
  <%= f.text_field :url, autoComplete: 'off', required: true %>
</div>
<div>
  <%= f.label :title, '视频标题' %>
  <%= f.text_field :title, autoComplete: 'off', required: true %>
</div>
<div>
  <%= f.label :image, '视频封面' %>
  <%= f.file_field :image, required: (@video.id.present? ? false : true) %>
</div>
<div>
  <%= f.label :category, '视频分类' %>
  <%= f.select :category, options_for_select(@categories, @video.category), {} %>
</div>
