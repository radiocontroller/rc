<div class="sweet-alert show-input showSweetAlert visible" data-animation="slide-from-top" style="display: block; margin-top: -256px;">
  <%= hidden_field_tag :id, nil, id: 'js-video-id' %>
  <h2>编辑视频</h2>
  <p>视频地址</p>
  <fieldset>
    <input type="text" tabindex="3" id='js-video-url'>
  </fieldset>
  <p>视频描述</p>
  <fieldset>
    <input type="text" tabindex="3" id='js-video-description'>
  </fieldset>
  <p>视频封面</p>
  <fieldset>
    <input type="text" tabindex="3">
  </fieldset>
  <div class="sa-button-container">
    <button id='js-cancel' class="cancel" tabindex="2" style="display: inline-block;">取消</button>
    <button id='js-update-video' class="confirm" tabindex="1" style="display: inline-block; box-shadow: rgba(174, 222, 244, 0.8) 0px 0px 2px, rgba(0, 0, 0, 0.0470588) 0px 0px 0px 1px inset; background-color: rgb(174, 222, 244);">确定</button>
  </div>
</div>
