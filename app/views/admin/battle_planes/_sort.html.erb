<div class="sweet-alert show-input showSweetAlert visible" data-animation="slide-from-top" style="display: block; margin-top: -256px;">
  <h2>排序战机</h2>
  <%= form_tag('', method: :put, id: 'sortForm') do %>
    <select name="sort_id">
      <% @limit.times do |i| %>
        <option value='<%= i+1 %>'>首页第<%= i+1 %>篇</option>
      <% end %>
    </select>
  <% end %>
  <div class="sa-button-container">
    <button id='js-cancel' class="cancel" style="display: inline-block;">取消</button>
    <button id='js-sort' class="confirm confirm-btn">确定</button>
  </div>
</div>
