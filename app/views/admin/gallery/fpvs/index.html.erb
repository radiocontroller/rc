<div>
  <a href="/admin/gallery/fpvs/new">
    <button type="button" class='upload-btn'>
      上传图片
    </button>
  </a>
</div>
<%= render 'admin/gallery/common/index' %>

<script type="text/javascript">
  $(function() {
    $(document).on('click', '#js-update-gallery', updateGallery);
  });

  function updateGallery() {
    $('#galleryForm').attr('action', '/admin/gallery/fpvs/'+ $(this).data('id')).submit();
  }
</script>
