<div class="sweet-alert show-input showSweetAlert visible" data-animation="slide-from-top" style="display: block; margin-top: -256px;">
  <h2>排序<%= @category %>图片</h2>
  <%= form_tag('', method: :put, id: 'galleryForm') do %>
    <select name="sort_id">
      <option value=''>无排序</option>
      <% @limit.times do |i| %>
        <option value='<%= i+1 %>'>首页第<%= i+1 %>张</option>
      <% end %>
    </select>
  <% end %>
  <div class="sa-button-container">
    <button id='js-cancel' class="cancel" style="display: inline-block;">取消</button>
    <button id='js-update-gallery' class="confirm confirm-btn">确定</button>
  </div>
</div>
