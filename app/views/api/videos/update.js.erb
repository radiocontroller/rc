<% if @video.errors.blank? %>
  $('.video-edit-wrap').hide();
  $('.video-edit-wrap').html("");
  $("#js-video-<%= @video.id %>").data('url', '<%= @video.url %>');
  $("#js-video-<%= @video.id %>").data('description', '<%= @video.description %>');
  $("#js-video-<%= @video.id %>").parent().prev().find('h3').html('<%= @video.description %>');
  swal("修改成功!", "", "success");
<% else %>
  swal("修改失败!", "", "success");
<% end %>
