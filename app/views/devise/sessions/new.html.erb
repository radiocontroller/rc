<div class="login-page">
  <div class="panel">
    <a href="javascript:void(0)" class="panel-item margin-lt-36">登录radio controller</a>
  </div>
  <div class="tips" style="margin-bottom: 0px;text-align: center">
    <span class="alert"><%= flash[:alert] %></span>
    <span class="notice"><%= flash[:notice] %></span>
  </div>
  <%= form_tag user_session_path, method: 'post', class: 'login-form' do %>
    <div class="form-item notice">
      <%= text_field_tag :email, nil, placeholder: '邮箱', class: 'width-260', required: true %>
    </div>
    <div class="form-item">
      <%= password_field_tag :password, nil, placeholder: '密码', class: 'width-260', required: true %>
    </div>
    <div class="form-items">
      <div class="form-item float-left">
        <%= rucaptcha_input_tag(class: 'width-125', placeholder: '验证码') %>
      </div>
      <div class="form-item float-right" style="height: 40px">
        <%= rucaptcha_image_tag(alt: 'Captcha', class: 'captcha') %>
      </div>
    </div>
    <div class="form-item">
      <%= submit_tag '登录', class: 'btn btn-login width-260' %>
    </div>
  <% end %>
  <div class="btn-group">
    <%= link_to '注册', new_user_registration_path, class: 'forget-code' %>
    <%= link_to '忘记密码', new_user_password_path, class: 'forget-code' %>
  </div>
</div>
