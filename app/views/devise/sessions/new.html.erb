<%= stylesheet_link_tag 'style' %>
<div class="login-page">
  <div class="panel">
    <a href="javascript:void(0)" class="panel-item active">登录</a>
    <a href="javascript:void(0)" class="panel-item margin-lt-36">注册</a>
  </div>
  <%= form_tag user_session, method: 'POST', class: 'login-form' do %>
    <div class="form-item notice">
      <%= text_field_tag :email, nil, placeholder: '用户名', class: 'width-260', required: true %>
      <%= link_to 'X', 'javascript:void(0)', class: 'delete warning' %>
      <mark><%= flash[:notice] %></mark>
    </div>
    <div class="form-item">
      <%= password_field_tag :password, nil, placeholder: '密码', class: 'width-260', required: true %>
      <%= link_to 'X', 'javascript:void(0)', class: 'delete warning' %>
    </div>
    <div class="form-item">
      <%= submit_tag '登录', class: 'btn btn-login width-260' %>
    </div>
  <% end %>

  <div class="btn-group">
    <a href="#" class="forget-code">忘记密码>></a>
  </div>
</div>
<script type="text/javascript">
  function empty_input() {
    $(this).prev().val('');
  }

  $(function(){
    $(document).on('click', '.delete', empty_input);
  });


</script>
