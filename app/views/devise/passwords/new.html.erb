<div class="login-page">
  <div class="panel">
    <a href="javascript:void(0)" class="panel-item margin-lt-36">重置密码</a>
  </div>
  <div class="tips" style="margin-bottom: 0px;text-align: center">
    <span class="alert"><%= flash[:alert] %></span>
  </div>
  <%= form_tag user_password_path, class: 'login-form' do %>
    <div class="form-item notice">
      <%= text_field_tag :email, nil, placeholder: '填写要重置密码的邮箱!', class: 'js-email width-260', required: true %>
    </div>
    <div class="form-items">
      <div class="form-item float-left">
        <%= rucaptcha_input_tag(class: 'width-125', placeholder: '验证码', required: true) %>
      </div>
      <div class="form-item float-right" style="height: 40px">
        <%= rucaptcha_image_tag(alt: 'Captcha', class: 'captcha') %>
      </div>
    </div>
    <div class="form-item">
      <%= submit_tag '发送邮件', class: 'btn btn-login width-260' %>
    </div>
  <% end %>
</div>
