<%= stylesheet_link_tag 'style' %>
<div class="login-page">
  <div class="panel">
    <a href="javascript:void(0)" class="panel-item margin-lt-36">注册</a>
  </div>
  <%= form_tag user_registration_path, method: 'POST', class: 'login-form' do %>
    <div class="form-item notice">
      <%= text_field_tag :email, nil, placeholder: '用户名', class: 'width-260', required: true %>
      <mark></mark>
    </div>
    <div class="form-item notice">
      <%= password_field_tag :password, nil, placeholder: '密码', class: 'width-260', required: true %>
      <mark></mark>
    </div>
    <div class="form-item notice">
      <%= password_field_tag :password_confirmation, nil, placeholder: '确认密码', class: 'width-260', required: true %>
      <mark></mark>
    </div>
    <div class="form-item">
      <%= submit_tag '注册', class: 'btn btn-login width-260' %>
    </div>
  <% end %>
</div>
<script type="text/javascript">
  $(function(){
    $(document).on('blur', '#email', valid_email);
  });

  function valid_email() {
    if($(this).val().trim().length == 0) {
      $(this).next().text('邮箱不能为空!');
    }
    else{
      $.get('/ajax/emails?email="' + $(this).val().trim() + '"', function(data) {
        
      });
    }
  }
</script>
