<div class="guide-reading">
  <div class="title">
    <h2>精选导读</h2>
    <div class="search">
      <input type="text" value="" class="search-input">
      <a class="btn-search" href="#"><i class="fa fa-search"></i></a>
    </div>
  </div>

  <div class="items">
    <% @articles.each do |article| %>
      <div class="item">
        <div class="text">
          <a href="#" class="username">心有猛虎，细嗅蔷薇</a>
          <span class="date">2016-03-08</span>
          <a class="article-title" href="/articles/<%= article.id %>"><%= article.title %></a>
          <p class="operation">
            <a href="#" class="fa fa-thumbs-o-up">366</a>
            <a href="#" class="fa fa-star-o">366</a>
            <a href="#" class="fa fa-twitch ">18</a>
          </p>
        </div>
        <div class="img">
          <%= article.content[/\<img(.*?)\>/].html_safe %>
        </div>
      </div>
    <% end %>
  </div>
</div>
