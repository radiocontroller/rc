<div class="infos">
  <div class="title">
    <div class="text">
      <h2><%= @article.title %></h2>
      <span class="date">
        管理员发布于<%= @article.created_at.strftime('%Y年%m月%d日 %H时%M分') %>
      </span>
    </div>
    <div class="operation">
      <%= render '/common/collect', resource: @article %>
    </div>
  </div>

  <div class="article-content">
    <%= @article.content.html_safe %>
  </div>

  <%= render '/common/comments/comments' %>

</div>
