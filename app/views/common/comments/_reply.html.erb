<div class="reply-box common-box">
  <%= form_tag("/#{@resource.class.to_s.downcase.pluralize}/#{@resource.id}/comments") do %>
    <%= hidden_field_tag :parent_id %>
    <textarea rows="8" cols="40" name='content'></textarea>
    <div class="btn-group">
      <span><a href="javascript:void(0)" class="face" title="表情"></a></span>
      <span>
        <button type="button" class='btn-submit' id='js-cancel-reply'>取消回复</button>
        <button type="button" class='btn-submit' id='js-reply'>提交</button>
      </span>
    </div>
  <% end %>
</div>
