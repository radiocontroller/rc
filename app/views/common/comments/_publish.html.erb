<div class="comment-box">
  <%= form_tag("/#{@resource.class.to_s.downcase.pluralize}/#{@resource.id}/comments") do %>
    <textarea rows="8" cols="40" name='content'></textarea>
    <div class="btn-group">
      <span>表情</span>
      <button type="button" class='btn-submit' id='js-publish'>发表评论</button>
    </div>
  <% end %>
</div>
