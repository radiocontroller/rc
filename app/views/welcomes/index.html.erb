<script type="text/javascript">
  jQuery.fn.slideLeftHide = function( speed, callback ) {
    this.animate({
        width : "hide",
        paddingLeft : "hide",
        paddingRight : "hide",
        marginLeft : "hide",
        marginRight : "hide"
    }, speed, callback );
  };

  jQuery.fn.slideLeftShow = function( speed, callback ) {
    this.animate({
        width : "show",
        paddingLeft : "show",
        paddingRight : "show",
        marginLeft : "show",
        marginRight : "show"
    }, speed, callback );
  };

  $(document).ready(function() {
    $('.setting').on('click', showSidebar);
    $('.sidebar-top').on('click', function(){
      console.log('xxx')
    })
    // $(document).on('click', hideSidebar);
  });

  function showSidebar() {
    $('.sidebar-wrap').html("<%= j render 'common/sidebar' %>");
    $('.sidebar-wrap').show();
    $('.sidebar').slideLeftShow(100);
  }

  function hideSidebar(e) {
    if(!$(e.target).is('.sidebar')) {
      $('.sidebar').slideLeftHide(100);
      $('.sidebar-wrap').hide();
    }
  }
</script>
