<div class="my-comment">
  <div class="title">
    <b><%= link_to reply.user.username, user_path(reply.user) %></b>
    在
    <a href="/<%= reply.commentable_type.downcase.pluralize %>/<%= reply.commentable_id %>">
      <%= comment_title(reply) %><%= reply.commentable.title %>
    </a>
    回复:
    <span><i class="fa fa-history"></i><%= reply.created_at.strftime('%Y-%m-%d %H:%M') %></span>
  </div>
  <p><%= reply.content %></p>
</div>
