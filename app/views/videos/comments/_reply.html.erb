<div class="replay-box">
  <%= form_tag(video_comments_path(@video)) do %>
    <%= hidden_field_tag :parent_id %>
    <textarea rows="8" cols="40" name='content' ></textarea>
    <div class="btn-group">
      <span>表情</span>
      <%= submit_tag '提交', class: 'btn-submit' %>
    </div>
  <% end %>
</div>
