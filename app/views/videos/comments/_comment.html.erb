<div class="item">
  <img src="<%= comment.user.avatar.url %>" alt="">
  <div class="user-comment">
    <div class="arrow">
      <em></em>
      <span></span>
    </div>
    <div class="user-title">
      <b><%= comment.user.username %></b>
      <span>
        <i class="fa fa-clock-o"></i>
        <b><%= comment.created_at.strftime('%Y-%m-%d %H:%M:%S') %></b>
      </span>
    </div>
    <p><%= comment.content %></p>

    <%= render '/videos/comments/child_comments', comment: comment %>

    <div class="reply">
      <a href="javascript:void(0)" data-id='<%= comment.id %>'>回复</a>
      <a href="javascript:void(0)" style='display: none'>取消</a>
    </div>

  </div>
</div>
<div class="reply-wrap"></div>
