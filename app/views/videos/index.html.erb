<div class="video-list">
  <div class="title">
    <h2>视频赏析</h2>
  </div>
    <div class="video-items">
      <div class="clasification">
        <% @categories.each do |category| %>
          <h2><%= category[:chinese] %></h2>
          <% category[:videos].each do |video| %>
            <%= render 'video', video: video %>
          <% end %>
          <div class="more-video">
            <a href="/videos/<%= category[:english] %>", target="_blank">
              更多视频
              <i class="fa fa-chevron-circle-right"></i>
            </a>
          </div>
        <% end %>
      </div>
    </div>
</div>
