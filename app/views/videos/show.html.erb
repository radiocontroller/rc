<div class="infos">
  <div class="title">
    <div class="text">
      <h2><%= @video.title %></h2>
      <span class="date">
        管理员发布于<span><%= @video.created_at.strftime('%Y年%m月%d日 %H时%M分') %></span>
      </span>
    </div>
    <div class="operation">
      <%= render '/common/collect', resource: @video %>
    </div>
  </div>

  <div class="video">
    <embed src="<%= @video.url %>" width="900" height="520" allowfullscreen="true"
      allowfullscreeninteractive="true">
    </embed>
  </div>

  <%= render '/common/comments/comments' %>

</div>
