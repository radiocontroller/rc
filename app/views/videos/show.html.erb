<div class="infos">
  <div class="title">
    <div class="text">
      <h2><%= @video.description %></h2>
      <a href="#" class="username">心有猛虎，细嗅蔷薇</a>
      <span class="date">发表于<%= @video.created_at.strftime('%Y-%m-%d') %></span>
    </div>
    <div class="operation">
      <%= render '/common/collect', resource: @video %>
    </div>
  </div>

  <div class="video">
    <embed src="<%= @video.url %>" width="900" height="500">
    </embed>
  </div>

  <%= render '/common/comments/comments' %>

</div>
