<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta charset="utf-8">
    <title>RC</title>
    <%= favicon_link_tag 'favicon.ico' %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
    <style type="text/css">
      #preview{margin: 0 auto;width:260px;height:190px;border:1px solid rgba(0,0,0,0.2);overflow:hidden;}
      #imghead{filter:progid:DXImageTransform.Microsoft.AlphaImageLoader(sizingMethod=image);}
    </style>
  </head>

  <body>
    <header class="header">
      <img data-original="/images/top.jpg" alt="" class="background-header lazy" />
      <div class="logo">
        <a href="/"><%= image_tag 'logo.jpg' %></a>
      </div>
    </header>

    <div class="main">
      <div class="content">

        <div class="user-left-wrap">
          <div class="user-left">
            <div class="user-avatar">
              <img src="<%= @user.avatar.present? ? @user.avatar.url : '/images/avatar.png' %>" alt="" />
            </div>
            <p><i class='fa fa-user'></i><%= @user.username %></p>
            <p><i class='fa fa-envelope'></i><%= @user.email %></p>
          </div>
        </div>

        <div class="user-right-wrap">
          <div class="user-right">
            
          </div>
        </div>

      </div>

      <%= render 'common/setting' %>
    </div>

    <div class="right-sidebar">
      <%= render 'common/right_sidebar' %>
    </div>

  </body>
</html>
