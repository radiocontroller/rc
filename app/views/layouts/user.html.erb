<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta charset="utf-8">
    <title>RC</title>
    <%= favicon_link_tag 'favicon.ico' %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <header class="header">
      <img data-original="/images/top.jpg" alt="" class="background-header lazy" />
      <div class="logo">
        <a href="/"><%= image_tag 'logo.jpg' %></a>
      </div>
    </header>

    <div class="main">
      <div class="content">

        <ul class="breadcrumb" style='margin-top: 20px;'>
          <%= @page_nav %>
        </ul>

        <div class="user-left-wrap">
          <div class="user-left">
            <div class="user-avatar">
              <a href="/users/<%= @user.id %>/account/edit">
                <img src="<%= @user.avatar.present? ? @user.avatar.url : '/images/avatar.png' %>" alt="" />
              </a>
            </div>
            <p><i class='fa fa-user'></i><%= @user.username %></p>
          </div>
        </div>

        <div class="user-right-wrap">
          <div class="user-right">
            <div class="user-nav">
              <a href="/users/<%= @user.id %>/collections/videos"><i class="fa fa-youtube-play"></i>TA收藏的视频</a>
              <a href="/users/<%= @user.id %>/collections/articles"><i class="fa fa-newspaper-o"></i>TA收藏的文章</a>
              <a href="/users/<%= @user.id %>/comments"><i class="fa fa-comments"></i>TA的评论</a>
            </div>
            <div class="user-collections">
              <%= yield %>
            </div>
          </div>
        </div>

      </div>

      <%= render 'common/setting' %>
    </div>

    <div class="right-sidebar">
      <%= render 'common/right_sidebar' %>
    </div>

  </body>
</html>
