<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta charset="utf-8">
    <title>RC</title>
    <%= favicon_link_tag 'favicon.ico' %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
    <script>
      $(function() {
        $('#camera').camera({
          loader: 'bar',
          pagination: false,
          thumbnails: true,
          hover: false,
          opacityOnGrid: false
        });
      })
    </script>
  </head>

  <body>
    <div class="main">
      <div class="camera_container">
        <div class="camera_wrap" id="camera" style='display: block; height: 643px; margin-bottom: 230px;'>
          <% @banners.each do |banner| %>
            <div data-thumb="<%= banner.resource.small.url %>"
              data-src="<%= banner.resource.big.url %>">
            </div>
          <% end %>
        </div>
      </div>

      <div class="logo">
        <a href="/"><%= image_tag 'logo.jpg' %></a>
      </div>

      <div class="content">

        <%= yield %>

      </div>

      <%= render 'common/foot' %>

      <%= render 'common/setting' %>
    </div>

    <div class="right-sidebar">
      <%= render 'common/right_sidebar' %>
    </div>

  </body>
</html>
